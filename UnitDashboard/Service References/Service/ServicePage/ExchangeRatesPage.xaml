<Page x:Class="UnitDashboard.Service.ExchangeRatesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="ExchangeRatesPage">
    
    <Border
        Name="Box"
        BorderBrush="Black"
        BorderThickness="1">
        <Grid
            Margin="3">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition 
                    Width="0.1*"/>
                <ColumnDefinition 
                    Width="*"/>
            </Grid.ColumnDefinitions>
            <Viewbox
                Grid.Column="0"
                Grid.Row="0"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Left">
                <Image
                    Source="Image\CHF.jpg"/>
            </Viewbox>
            <Viewbox
                HorizontalAlignment="Left"
                Grid.Row="1"
                Grid.Column="1">
                <TextBlock
                    Name="FBExchangeRates_1" />
            </Viewbox>
            <Viewbox
                Grid.Column="0"
                Grid.Row="2"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Left">
                <Image
                    Source="Image\USD.jpeg"/>
            </Viewbox>
            <Viewbox
                HorizontalAlignment="Left"
                Grid.Row="3"
                Grid.Column="1">
                <TextBlock
                    Name="FBExchangeRates_2" />
            </Viewbox>
            <Viewbox
                Grid.Column="0"
                Grid.Row="4"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Left">
                <Image
                    Source="Image\EUR.jpg"/>
            </Viewbox>
            <Viewbox
                HorizontalAlignment="Left"
                Grid.Row="5"
                Grid.Column="1">
                <TextBlock
                    Name="FBExchangeRates_3" />
            </Viewbox>
        </Grid>
    </Border>
</Page>
